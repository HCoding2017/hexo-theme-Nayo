  <div class="widget">

     <a href="<%- url_for(theme.menu.tags) %>"><span class="widget-title"><%=  __('Sidebar.TagCloud') %></span></a>

			<% site.tags.each(function (tag){ %>
    		<a class="tag-item slideDownMin" href="<%- url_for(tag.path)%>"><%- tag.name %></a>    		
    		<%})%>

  </div>
<% } %>