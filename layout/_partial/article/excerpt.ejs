<div class="article-excerpt">	

	<% if(post.photos && post.photos.length!=0) {%>
		<%- partial('_partial/article/gallery',{post:post}) %>	
	 <% } %> 


  <% if (post.excerpt) { %>

  	<%- post.excerpt %>   

   <% } else { %>
  	<%- post.content %>    


  <% } %>  

</div>

<div class="bottom">
	
	<div class="left">	
	 <%- partial('_partial/article/meta',{post:post}) %>	
	</div>


	<div class="right">
	<a class="article-read-more" href="<%- url_for(post.path) %>"><%= __('Read_more') %></a> 
	</div>
</div>
