
 <nav class="bottom-nav">
     <% if (page.prev) { %>
      <div class="nav_prev">
        <a class="bottom-link" href="<%- url_for(page.prev.path) %>">  
           <li class="li iconfont icon-left"></li>         
            <% var title = truncate(page.prev.title , {length:60}) %>  
          <span class="bottom-link-title"><%= title || '(no title)' %></span>
        </a>
      </div>
    <% } %>

    <% if (page.next) { %>
       <div class="nav_next">      
        <a  class="bottom-link" href="<%- url_for(page.next.path) %>">      

         <% var title = truncate(page.next.title, {length:60}) %>    
         <span class="bottom-link-title"><%= title || '(no title)' %></span>
          <li class="li iconfont icon-right"></li>
        </a>
        </div>
    <% } %>
</nav>  