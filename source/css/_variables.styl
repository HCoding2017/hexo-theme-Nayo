$font-blod  	= 500
$font-max 		= 600

$logo-font 		= 'Lucida Grande','Open Sans Condensed'
$post-title-font= 'Helvetica Neue','Open Sans Condensed','微软雅黑'
$page-title-font=  'Helvetica Neue','Verdana','PingFang TC'
