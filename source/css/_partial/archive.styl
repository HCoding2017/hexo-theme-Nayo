.archive
	@extend $block
	clear both	

.archive-year
	font-size 1.2em
	clear both
	opacity 0.9
	
.archive-item
	font-size 1em
	clear both
	overflow hidden
	margin 1em 1.8em
	&:hover
		margin-left 2.4em
		color $hover-clr

.archive-date
	font-size 1.0em
	opacity 0.5
	
.archive-title
	margin-left 1.2em
	font-size 1.0em	
	&:hover		
		color $hover-clr
	


	