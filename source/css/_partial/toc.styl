.toc{	
	color  gray 
	overflow hidden
	position absolute
    top 0%
    left 87% 
    width 28%
}
.toc-container
	margin auto 0
	height 100%	  
	width auto
.contents
	display block
	color $black
	padding .2em
	font-size 1.1em	
	cursor pointer
.toc-list
    list-style-type none	
  
.toc-item 
	display block	
	font-size 1em
	font-weight $font-normal
	color $black
	margin 0
	padding 0
	letter-spacing  1px
	
.toc-item 
	&:hover
		 cursor pointer
		 color $hover-clr
		 margin-left .3em
		 
.toc-subitem 
	display block
	font-size .9em	
	opacity .7
	margin-left 0.6em
	font-weight $font-normal

.toc-subitem
	&:hover
		cursor pointer
		color  $hover-clr
		margin-left 0.8em

//script CSS
.toc-fixed
	position fixed 
	top 0 
.toc-active
	color $hover-clr
	&:before
		content "#"
		font-size 1.3em

.toc-sub-active
	color $hover-clr
	&:before
		content "#"
		font-size 1.3em