.toc-container
	display none
	margin auto 0
	height 100%	  
	width 90%
.toc-contents
	display block
	color $black
	padding .2em
	font-size 1rem	
	cursor pointer
.toc-list
    list-style-type none	  
.toc-item 
	display block	
	font-size .95rem
	font-weight $font-normal
	color $black
	margin .3em 0
	padding 0
	letter-spacing  1px
	
.toc-item 
	&:hover
		cursor pointer
		color $thr-clr 
		margin-left .3em
		 
.toc-subitem 	
	display block
	font-size .85rem	
	margin .2em 0	
	color gray
	margin-left 0.6em
	font-weight $font-normal

.toc-subitem
	&:hover
		cursor pointer
		color  $thr-clr 
		margin-left  .4em

//script CSS
.toc-fixed	
	position fixed 
	width 90%
	top 0 
.toc-active
	color $thr-clr 
	
.toc-sub-active
	color $thr-clr 
	