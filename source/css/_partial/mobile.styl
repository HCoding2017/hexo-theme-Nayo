//header
.header
	width 100%
.header-nav
	width 100%
	height  auto
	padding .2em 0
	display block	
	text-align center
.header-logo
	display block
	clear both
	width 18%
	margin 0 auto
	
.header-menu
	width 100% 	
	margin .6em 0
	padding .1em 0
	display flex
	flex-wrap wrap   
.header-menu-link
	display block
	line-height 2em
	height 50%
	
//article

.meta
	width 100%
//container 	
.container,#main
	clear both
	width 98%	    
	margin-top 1em
	padding 0 .2em
//sideber
#sidebar
	margin-top 1em
	clear both
//index
#post
	width 100%
.post-card,.excerpt,.bottom
	width 100%
	padding-bottom .2em

	
//code
.post-content
	width 100%	
.highlight 
	width 100%

//gallery
.gallery-box,.gallery-brg,.gallery-img
	width 100%
//read-more
.article-read-more
	border none
//toc
.toc
	display none