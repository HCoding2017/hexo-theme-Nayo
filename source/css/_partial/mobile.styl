//container 
.container
	display block	
.container,#main
	clear both
	width 98%	
	margin 0 
	padding 0 .2em 
	margin-top 1em	
//toc
#toc
	display none	


//header
.header
	width 100%
.header-nav
	width 100%
	height  auto
	padding .2em 0
	display block	
	text-align center
.header-logo	
	display block
	clear both
	width 18%
	margin 0 auto	
.header-menu
	width 100% 	
	margin .6em 0
	padding .1em 0
	display flex
	flex-wrap wrap
	overflow auto   
.header-menu-link
	display block
	line-height 2em
	height 50%	

//post
.post-title
	font-size 2rem
	margin 1rem 0
//post-nav
.nav-prev,.nav-next
	clear both

//post-reward
.reward
	display block
.reward-img-left, .reward-img-right,.reward-brg
	margin 0
	padding .2em 0
	width 100%	
	clear both

//article	
.article-title  
	font-size 1.1rem	
.article-date
	font-size .9rem

//sideber
#sidebar
	width 100%
	margin-top 1em
	clear both
//index
#post
	width 100%
.post-card,.excerpt,.bottom
	width 100%
	padding-bottom .2em
	
//widget
.widget
	display none
.profile
	display block
	width 88%
	margin-top 2rem

//code
.post-content
	width 100%	
.highlight 
	width 100%

//gallery
.gallery-box,.gallery-brg,.gallery-img
	width 100%


//back-to-top
.back-to-top
	left 80%
	bottom 10%
//paginator
.prev,.next 
	font-size 1rem