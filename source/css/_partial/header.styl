 .header
  clear both 
  width 100%
  z-index 666 
  border-bottom 1px solid $line-clr
  
.header-nav 
  width 66%
  margin  0 auto  
  height 70px  
  display flex  
  align-items center
  justify-content space-between 
    
.header-logo   
    @extend $close
    position relative
    display inline-block
    line-height 70px
    margin 0 4rem 
    color $black
    font-size 1.7rem    
    font-family $logo-font 
    height 100%
    &:visited,&:active
      color $black
    &:hover 
      color $main-clr
     
.header-menu
    height 100%
    display flex
    justify-content center
    align-items center
 
.header-menu-link  
    margin 0 .8em
    height 100%
    display inline-block  
    line-height 4.5em
    font-size 1.1rem
    opacity .8
    letter-spacing .5px
    &:visited,&:active
      color $black 
    &:hover
      color $main-clr
   
//script
.header-static
  position static
  opacity 1
  background-color $bgr  
  border-radius 10px  
.header-fixed
  position fixed
  top 0
  left 0
  opacity 0.8
  background-color $white 
  transition .6   
.header-menu-active  
  border-bottom 2px solid $main-clr
  &:visited,&:active
      color $main-clr
   