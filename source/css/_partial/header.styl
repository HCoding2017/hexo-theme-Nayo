 .header
  clear both 
  width 100%
  border-radius 10px 
  box-shadow 10px 0 20px 0 $box-shadow-clr
  z-index 888  
.header-nav 
  width  60%
  margin  0 auto  
  height 70px  
  display flex
  display -webkit-flex
  align-items center
  justify-content space-between 
    
.header-logo   
    padding .5em 
    border .1em solid $blue
    border-radius 999em
    &:hover
      background $white
      border .1em solid $hover-clr 

       
.header-menu-link  
    margin-left .8em
    margin-right .8em  
    padding-bottom .9em
    position relative
    @media mq-normal  
      &::before , &::after
       position absolute 
      &:hover
       color $hover-clr    
       font-size 1.1em    
      &:hover::before 
        content "\5b"
        left -10px
      &:hover::after
        content "\5d"
        right -10px