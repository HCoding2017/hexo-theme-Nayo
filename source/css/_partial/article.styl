//article
.article-card
  @extend $block 
  overflow hidden  
 
.article-top 
  margin 0 auto
  padding 10px 20px
  height 40px
  border-left 1.8px solid $gray
  border-bottom .8px solid $line-clr 
  margin-bottom .4em
  display -webkit-flex
  display flex
  justify-content space-between
  overflow hidden
  &:hover
    border-left 3px solid $hover-clr
    color $hover-clr    
    
.article-top-title    
    width auto
    max-width 85%
    font-size 1.2em  
    font-family  $post-title-font 
    font-weight $font-blod 
    

.article-content
    padding 3px  
    height 100%  
    font-size 14px
    font-style italic
    &:hover
      color $hover-clr
      

.article-read-more     
    text-decoration none    
    padding .5em
    margin  0 .9em 
    font-size 0.9em    
    border 1px solid $border-clr
    border-radius 10px
    &:hover
      color $readmore-hover-clr
      border 1px solid $readmore-hover-clr
  
.meta
    margin-top 5em

.gallery-box
    display inline-block
    width 170px
    height auto    
.gallery-brg    
    @extend $img_radius 
    display block
    width 170px
    height 170px
    overflow hidden
    background-size cover
    background-position center
.gallery-img
    visibility hidden
    width 100%
    height 100%