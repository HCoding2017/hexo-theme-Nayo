//article
.article
  @extend $block 
  padding 1em 0
  padding-top 0
  margin-bottom 2em
  overflow hidden  
  border-bottom 1px solid $line-clr     
  border-radius 5px         
.article-header 
  margin 0 auto
  padding 20px 20px
  border-left 1.7px solid $gray
  border-bottom .9px solid $line-clr 
  margin-bottom .6em
  display -webkit-flex
  display flex
  justify-content space-between
  &:hover
    border-left 3px solid $hover-clr
    color $hover-clr    
    
.article-title     
    width auto
    max-width 89%
    font-size 1.4em  
    font-family  $post-title-font 
    font-weight $font-blod 
    &:visited,&:active
      color $black 
    &:hover
      color $hover-clr


.article-excerpt
    padding .3em
    height 100%  
    font-size 15px
    line-height 1.6
    opacity .9
    text-align justify
    &:hover
      color $hover-clr
      

.article-readmore
    @extend $close
    position relative
    float right   
    padding .5em
    margin  .4em .9em 
    font-size 1rem    
    &:hover
      color $readmore-hover-clr     
  
.gallery-box
    display inline-block
    width 175px
    height auto    
.gallery-brg    
    @extend $img_radius 
    display block
    width 175px
    height 175px
    overflow hidden
    background-size cover
    background-position center
.gallery-img
    visibility hidden
    width 100%
    height 100%