//article
.article-card
  @extend $block 
  overflow hidden  
 
  
.article-top
  margin 0 auto
  padding 10px 20px
  height 40px
  border-left 1.8px solid $gray
  border-bottom 1px solid $line-clr 
  margin-bottom .4em
  &:hover
    border-left 2px solid $hover-clr
    color $hover-clr    
    
.article-top-title      
    font-size 1.3em  

.article-top-date
    color gray
    font-size 0.8em  

.article-excerpt
    padding 3px 6px 
    height 100%      

.article-read-more     
    color red
    text-decoration none
    margin 1.2em    
    padding 0.5em
    font-size 0.9em    
    border 1px solid $border-clr
    border-radius 10px
    &:hover
      color $readmore-hover-clr
      border 1px solid $readmore-hover-clr
      

.gallery-box
    display inline-block
    width 170px
    height auto    
.gallery-brg    
    @extend $img_radius 
    display block
    width 170px
    height 170px
    overflow hidden
    background-size cover
    background-position center
.gallery-img
    visibility hidden
    width 100%
    height 100%