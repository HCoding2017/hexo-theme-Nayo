//article
.article-card
  @extend $block 
  padding 1em 0
  padding-top 0
  margin-bottom 5em
  overflow hidden  
  
.article-top 
  margin 0 auto
  padding 20px 20px
  border-left 1.8px solid $gray
  border-bottom .9px solid $line-clr 
  margin-bottom .6em
  display -webkit-flex
  display flex
  justify-content space-between
  &:hover
    border-left 3px solid $hover-clr
    color $hover-clr    
    
.article-top-title     
    width auto
    max-width 89%
    font-size 1.4em  
    font-family  $post-title-font 
    font-weight $font-blod 
    &:visited,&:active
      color $black 
    &:hover
      color $hover-clr

.article-content
    padding .3em
    height 100%  
    font-size 15px
    line-height 1.6
    text-align justify
    &:hover
      color $hover-clr
      

.article-read-more     
    text-decoration none    
    padding .5em
    margin  0 .9em 
    font-size 0.9em    
    border 1px solid $border-clr
    border-radius 10px
    &:hover
      color $readmore-hover-clr
      border 1px solid $readmore-hover-clr
  
.meta
    margin-top 5em

.gallery-box
    display inline-block
    width 175px
    height auto    
.gallery-brg    
    @extend $img_radius 
    display block
    width 175px
    height 175px
    overflow hidden
    background-size cover
    background-position center
.gallery-img
    visibility hidden
    width 100%
    height 100%