.post 
  margin 0 auto 
  overflow hidden  
  padding-top .4em    

//post/head.ejs  
.post-head
  padding-bottom .5em
  border-bottom 1px solid $line-clr 
.post-title 
  display block
  font-size 2.8rem
  font-family $post-title-font
.post-info
  width 100%
  margin 2em .5em    
  font-family $time-font
.post-time,.post-words,.post-visitor
  font-size 1.2rem 
  opacity .6
  font-style italic 
  padding-left .12em 
  
.post-content  
  margin-top 1rem
  margin-bottom 5rem
.post-content a
  @extend $close
  position relative
  color $cyan
  &:hover
    color $hover-clr
 

//post/mob_share.ejs
.-mob-share-list
  text-align right
  clear both
  width 100%
  margin 1rem 0
.-mob-share-list span
  padding .2rem 
  margin 1rem 0
  border 1px solid gray
  border-radius 10px
  cursor pointer
  opacity .7
  &:hover
      border 1px solid $hover-clr      
       
// post/nav.ejs 
.nav    
    margin 3em 0
    padding 2em .8em
    font-size 1.2em   
    clear both    
.nav-prev
    float left  
.nav-next
    float right  

.nav-link   
    font-size 1em
    &:hover
      color $hover-clr
   

// post/reward
.reward-icon 
  display block
  width 100%
  margin .4em 0
  text-align center
  cursor pointer
.reward
  margin-bottom 2em
  width 100%  
  display flex
  justify-content center

.reward-img-left,.reward-img-right
  margin 1em .5em  
  width 300px
  height auto
  display none
.reward-brg    
  @extend $img_radius 
  display block
  width 300px
  height 300px
  overflow hidden
  background-size cover
  background-position center
.reward-img
  visibility hidden
  width 100%
  height 100%
  

// post/widgets.ejs
.post-widget
  padding 3em 0
  text-align center
.post-widget a 
  &:hover 
     color $hover-clr
.post-widget-title
  font-size 1em 
  margin-bottom 1em
  


//meta
.meta
    margin .2em 0
    width 100%
.category-link,.tag-link    
    padding .2em 0
    &:hover 
     color $hover-clr
     border-bottom 1px solid $blue