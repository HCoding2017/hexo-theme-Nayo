
.post 
  margin 0 auto 
  overflow hidden  
  padding-top .4em    

//post/head.ejs  
.post-head
  padding-bottom .5em
  border-bottom 1px solid $line-clr 
.post-title 
  display block
  font-size 2.8rem
.post-info
  width 100%
  margin 2em .5em
  
.post-info time
  font 1.2rem  $time-font
  font-style italic 
  opacity 0.5
.post-visitor
  font 1.1rem  $time-font
  font-style italic 
  opacity 0.5
  margin-left 1em  
.post-text a
  @extend $spread
  position relative
  color $cyan
  &:hover
    color $hover-clr
    border-bottom 1px solid $hover-clr


.post-meta
   margin 2em .5em
   

// post/nav.ejs 
.nav_prev
    float left  
.nav_next
    float right  
.bottom-nav
    margin 1em
    padding 2em 0
    font-size 1.2em   
    clear both
    border-bottom 1px solid $line-clr 
.bottom-link   
    font-size 1em
    &:hover
      color $hover-clr
.bottom-link-title
    font-size .9em
    overflow hidden     
// post/reward
.reward-icon 
  display block
  width 100%
  margin 1em 0  
  text-align center
  cursor pointer
.reward
  width 100%  
  display flex
  justify-content center

.reward-img-left , .reward-img-right
  margin 1em .5em  
  width 300px
  height auto
  display none
.reward-brg    
  @extend $img_radius 
  display block
  width 300px
  height 300px
  overflow hidden
  background-size cover
  background-position center
.reward-img
  visibility hidden
  width 100%
  height 100%

// post/widgets.ejs
.bottom-widget
  padding 3em 0
  text-align center
.bottom-widget a 
  &:hover 
     color $hover-clr
.bottom-widget-title
  font-size 1em 
  margin-bottom 1em

//post/mob_share.ejs
.-mob-share-list
  text-align right
  clear both
  width 100%
  margin 1rem 0
.-mob-share-list span
  padding .2rem 
  border 1px solid gray
  border-radius 10px
  cursor pointer
  opacity .7
  &:hover
      border 1px solid $hover-clr 
      