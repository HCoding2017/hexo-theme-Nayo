
@import "_variables"
@import "_iconfont"
@import "_extend"


@import "_util/mixin"
@import "_util/grid"

@import "_highlight/highlight"

 
html,body
  height 100%
  width 100%
  background $bgr
  line-height .9
  letter-spacing .5px
  margin 0 
  padding 0
  font $font-size $font
   
h1
    font-size 1.6em
    font-weight $font-blod 
h2  
    font-size 1.5em
    font-weight $font-blod 
h3
    font-size 1.2em
    font-weight  $font-blod 
h4
    font-size .9em
    font-weight $font-blod 
h5,h6
    font-size .7em
    font-weight $font-blod  


.ul,.li
  margin 0
  padding 0.2em
  list-style-type none
  display inline
  

.page-title
   display block
   font-size 1.2em
   font-family $page-title-font 
   font-weight $font-blod
   margin-bottom 2.6em
   opacity 0.9
   line-height 10px  
   letter-spacing .5px
   

a
 text-decoration none 

 &:hover
   color $hover-clr 
 &:link
   color $black
 &:visited
   color $black
 &:active 
   color $black

img
  @extend $img_radius 
  width 100%
  height auto
  &:hover
    opacity 0.8
time
  font 1rem  $time-font 
  opacity 0.6
  

::selection 
  background $blue 
  color $white

fullscreen = hexo-config("fullscreen")
.container  
  margin 0 auto
  margin-top 2em
  @media mq-normal  
    position: relative  
    top: 0
    left: 0
    display: flex
    align-items: flex-start
    justify-content: center

if  fullscreen is true
  .container
     @media mq-normal
      max-width 90%      
else
  .container
     @media mq-normal
      max-width 70%
      
.container 
  @media mq-tablet 
     max-width 98%

.left
  float left
.right
  float right
.clear
  clear both
.inline
  display inline
.center 
  text-align: center
.back-to-top
    padding .1em
    color $black
    display none
    position fixed   
    cursor pointer
    opacity 0.8
    z-index 5 
    bottom 10%
    left 90%  
    &:hover
      color $hover-clr
      border 1px solid $border-clr
      border-radius 10px

#container 
  @media mq-normal     
    column(container-column)  

#main    
  @media mq-normal
    column(main-column)  
  @media mq-tablet 
    column(main-column)  
    
#sidebar
  @media mq-normal
    column(sidebar-column)
  @media mq-tablet 
    column(sidebar-column)
    

#post  
  position relative
  width 100%  
  
  
sidebar = hexo-config("sidebar")

if sidebar is false
  #main
        width 70%
  #main
      @media mq-tablet 
        width 100%
  #post     
        width 90% 
 


  
toc = hexo-config("toc")

if toc is false
  .toc
     display none
     
.toc       
    @media mq-tablet 
      display none
      


::-webkit-scrollbar 
    width 8px 
    height 8px 
    background-color $gray   

::-webkit-scrollbar-track  
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)  
    border-radius  10px
    background-color  $white   

::-webkit-scrollbar-thumb  
    border-radius 10px
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3)  
    background-color #555


@import "_partial/header"
@import "_partial/footer"
@import "_partial/post"
@import "_partial/archive"
@import "_partial/article"
@import "_partial/paginator"
@import "_partial/category"
@import "_partial/tags"
@import "_partial/toc"
@import "_partial/sidebar"

@import "_animation"

@media mq-mobile 
      @import "_partial/mobile"    
