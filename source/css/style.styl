
@import "_variables"
@import "_partial/iconfont"
@import "_util/mixin"
@import "_util/grid"
@import "_highlight/highlight"
@import "_extend"

html,body
  height 100%
  width 100%
  background $bgr
  line-height 1.2
  margin 0 
  padding 0
  font $font-size $font
  

.ul,.li
  margin 0
  padding 0.2em
  list-style-type none
  display inline
a
 text-decoration none 
 &:hover
   color $hover-clr 
 &:link
   color gray
 &:visited
   color gray
img
  width 100%
  height auto
  &:hover
    opacity 0.8


fullscreen = hexo-config("fullscreen")
.container  
  padding 0 auto
  margin 0 auto
  margin-top 2em
  

if  fullscreen is true
  .container
     @media mq-normal
      max-width 100%      
else
  .container
     @media mq-normal
      max-width 70%

    
.line  
  width 100% 
  border-bottom 1px solid $line-clr 
  clear both
  
.left
  float left
.right
  float right
.clear
  clear both
.inline
  display inline
.center 
  text-align: center
.back-to-top
    padding .1em
    color $black
    display none
    position fixed   
    cursor pointer
    opacity 0.8
    z-index 5 
    bottom 10%
    left 90%
    @media mq-mobile
      display none
    &:hover
      color $hover-clr
      border 1px solid $border-clr
      border-radius 10px

#container 
  @media mq-normal 
    column(container-column)  
#main  
  @media mq-normal
    column(main-column)  
    
#sidebar
  @media mq-normal
    column(sidebar-column)
#post
  @media mq-normal
    column(post-column)
#toc
  @media mq-normal
    column(toc-column) 

  

  
sidebar = hexo-config("sidebar")

if sidebar is right
  #main
    @media mq-normal
      float left
else
  #main
    @media mq-normal
      float right


toc = hexo-config("toc")

if toc is true
  #toc 
    column(toc-column)
else
  #post
    column(container-column)


    
/*定义滚动条背景*/
::-webkit-scrollbar 
    width 10px //y
    height 8px //x
    background-color $gray   
/*轨道 内阴影+圆角*/  
::-webkit-scrollbar-track  
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)  
    border-radius  10px
    background-color  $white   
/*滑块 内阴影+圆角*/  
::-webkit-scrollbar-thumb  
    border-radius 10px
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3)  
    background-color #555


