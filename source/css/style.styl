@import "_variables"
@import "_iconfont"
@import "_extend"


@import "_util/mixin"
@import "_util/grid"

@import "_highlight/highlight"

 
html,body
  height 100%
  width 100%
  background $bgr
  line-height .9
  letter-spacing .3px
  margin 0 
  padding 0
  font $font-size $font
body
  overflow-x hidden

h1
    font-size 1.6em
    font-weight $font-blod 
    &:before
      content "#"
      font-size 1.2em
      color $hover-clr
h2  
    font-size 1.5em
    font-weight $font-blod 
h3
    font-size 1.2em
    font-weight  $font-blod 
h4
    font-size .9em
    font-weight $font-blod 
h5,h6
    font-size .7em
    font-weight $font-blod  


.ul,.li
  margin 0
  padding 0.2em
  list-style-type none
  display inline 

.page-title
   display block
   font-size 1.2em
   font-family $page-title-font 
   font-weight $font-blod
   margin-bottom 2.6em
   opacity .8
   line-height 10px  
   letter-spacing .5px
  

a
 text-decoration none 
 &:hover
   color $hover-clr 
 &:link
   color $black
 &:visited
   color $black
 &:active 
   color $black

img
  @extend $img_radius 
  width 100%
  height auto
  &:hover
    opacity 0.8
time
  font 1rem  $time-font 
  opacity 0.6
  


.container  
  margin 0 auto
  margin-top 2.6em
  position relative  
  top 0
  left 0
  display flex
  align-items flex-start
  justify-content center

.left
  float left
.right
  float right
.clear
  clear both
.inline
  display inline
.center 
  text-align: center
.back-to-top
    padding .1em
    color $black
    display none
    position fixed   
    cursor pointer
    opacity 0.8
    z-index 5 
    bottom 8%
    left 90%  
    &:hover
      color $hover-clr
      border 1px solid $border-clr
      border-radius 10px



#toc
    overflow hidden
    position absolute
    top 0
 
fullscreen = hexo-config("fullscreen")
   
if  fullscreen is true 
  #post
      width 58%
  #toc
      left 81%
      width 25%
      max-width 28%    
  #main  
      width 63%
      margin 0 .9em  
  #sidebar  
      width 22%
      margin 0 .9em
else 
  #post
      width 54%
  #toc
      left 79%
      width 25%
      max-width 28%    
  #main  
      width 50%
      margin 0 .9em     
  #sidebar  
      width 18%
      margin 0 .9em 




  
sidebar = hexo-config("sidebar")

if sidebar is false
  #main
    width 60%
    

  
toc = hexo-config("toc")

if toc is false
  #toc
     display none
     
#toc      
  @media mq-mobile 
      display none

::-webkit-scrollbar 
    width 8px 
    height 8px 
    background-color $gray   

::-webkit-scrollbar-track  
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)  
    border-radius  10px
    background-color  $white   

::-webkit-scrollbar-thumb  
    border-radius 10px
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3)  
    background-color #555
    

::selection 
  background $blue 
  color $white
  
@import "_partial/header"
@import "_partial/footer"
@import "_partial/post"
@import "_partial/archive"
@import "_partial/article"
@import "_partial/paginator"
@import "_partial/category"
@import "_partial/tags"
@import "_partial/toc"
@import "_partial/sidebar"

@import "_animation"

@media mq-mobile 
      @import "_partial/mobile"    

@media mq-tablet
      @import "_partial/tablet"   